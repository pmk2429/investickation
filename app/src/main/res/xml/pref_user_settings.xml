<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Activities Count -->
    <PreferenceCategory
        android:title="@string/settingsPref_category_title_appFunctions">

        <EditTextPreference
            android:inputType="number"
            android:key="@string/KEY_PREF_ACTIVITIES_COUNT"
            android:summary="2"
            android:title="@string/settingsPref_editText_title_recentActivities"/>

    </PreferenceCategory>

    <!-- Notifications -->
    <PreferenceCategory
        android:title="Notifications">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/KEY_PREF_RECEIVE_NOTIFICATIONS"
            android:summary="@string/settingsPref_checkbox_summary_notifications"
            android:title="@string/settingsPref_checkbox_title_notifications"/>
    </PreferenceCategory>

