<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.sfsu.investickation.fragments.TutorialFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondaryDark"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="How to use InvesTICKations?"
                android:textSize="@dimen/font_X_large"/>

            <!--Add Activity-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="Create an Activity"
                android:textSize="@dimen/font_medium"/>

            <ImageView
                android:layout_width="@dimen/cardview_small"
                android:layout_height="@dimen/cardview_X1_large"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_dimen_large"
                android:scaleType="fitXY"
                android:src="@drawable/new_activity"/>

            <!--Add Activity-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="Make Observations while Activity is Running"
                android:textSize="@dimen/font_medium"/>

            <ImageView
                android:layout_width="@dimen/cardview_small"
                android:layout_height="@dimen/cardview_X1_large"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_dimen_large"
                android:scaleType="fitXY"
                android:src="@drawable/running_activity"/>

            <!--Add Reminder-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="Add Reminder"
                android:textSize="@dimen/font_medium"/>

            <ImageView
                android:layout_width="@dimen/cardview_small"
                android:layout_height="@dimen/cardview_X1_large"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_dimen_large"
                android:scaleType="fitXY"
                android:src="@drawable/add_reminder"/>

            <!--Add Observation-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="Found Tick? Make Observation"
                android:textSize="@dimen/font_medium"/>

            <ImageView
                android:layout_width="@dimen/cardview_small"
                android:layout_height="@dimen/cardview_X1_large"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_dimen_large"
                android:scaleType="fitXY"
                android:src="@drawable/add_observation"/>

            <!--View Tick Guide for learning more about Ticks-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_marginStart="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:text="Learn more about Ticks from Tick Guide"
                android:textSize="@dimen/font_medium"/>

            <ImageView
                android:layout_width="@dimen/cardview_small"
                android:layout_height="@dimen/cardview_X1_large"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_dimen_large"
                android:scaleType="fitXY"
                android:src="@drawable/tick_guide"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

