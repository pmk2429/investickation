<?xml version="1.0" encoding="utf-8"?>
<!-- SLIDING LAYOUT -->
<RelativeLayout
    android:id="@+id/linearLayout_contentView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="false">

    <!--Observation Image-->
    <ImageView
        android:id="@+id/imageView_infoWindow_tickImage"
        android:layout_width="@dimen/widget_dimen_X1_large"
        android:layout_height="@dimen/widget_dimen_X1_large"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/view_dimen_small"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/placeholder_tick"/>

    <!--Observation name-->
    <TextView
        android:id="@+id/textView_infoWindow_obsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_dimen_large"
        android:layout_marginTop="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/imageView_infoWindow_tickImage"
        android:text="@string/infoWindow_obsName"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_medium"/>

    <ImageView
        android:id="@+id/icon_slidingPanel_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_infoWindow_obsName"
        android:layout_marginStart="@dimen/view_dimen_large"
        android:layout_marginTop="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/imageView_infoWindow_tickImage"
        android:src="@mipmap/ic_access_time_black_24dp"/>

    <!--Observation Location-->
    <TextView
        android:id="@+id/textView_infoWindow_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_slidingPanel_location"
        android:layout_marginStart="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/icon_slidingPanel_location"
        android:text="@string/infoWindow_location"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/font_small"/>

</RelativeLayout>