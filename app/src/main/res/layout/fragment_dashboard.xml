<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_X_large"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imageView_dashboardHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/view_dimen_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="125dp"
                    android:text="Welcome to InvesTICKations"
                    android:textColor="@color/colorWhite"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_dashboard_scrollable"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ultraLightText"
            android:paddingBottom="@dimen/view_dimen_large"
            android:paddingLeft="@dimen/view_dimen_large"
            android:paddingRight="@dimen/view_dimen_large"
            android:paddingTop="@dimen/view_dimen_X1_large"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/linearLayout_activity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardview_default"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/view_dimen_small"
                android:layout_toLeftOf="@id/separator_vertical_observation_1"
                android:background="@drawable/dashboard_card_border"
                android:elevation="8dp">

                <!-- Total Activities made by user-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_activityCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_X3_large"/>

                    <TextView
                        android:id="@+id/textViewStatic_activityCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/view_dimen_large"
                        android:paddingLeft="@dimen/view_dimen_small"
                        android:paddingRight="@dimen/view_dimen_small"
                        android:text="ACTIVITIES"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_small"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/view_dimen_large"
                        android:text="tap for details"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_X_small"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_activity_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/linearLayout_activity"
                android:layout_marginRight="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:layout_toLeftOf="@id/separator_vertical_observation_1"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="@dimen/view_dimen_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/view_dimen_large"
                    android:paddingRight="@dimen/view_dimen_large"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="START"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!--Line separator-->
            <View
                android:id="@+id/separator_vertical_observation_1"
                android:layout_width="1dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/linearLayout_observation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardview_default"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/view_dimen_small"
                android:layout_toRightOf="@id/separator_vertical_observation_1"
                android:background="@drawable/dashboard_card_border"
                android:elevation="8dp">

                <!-- Total Observations made by user-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_observation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_observationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="16"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_X3_large"/>

                    <TextView
                        android:id="@+id/textViewStatic_observationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/view_dimen_large"
                        android:paddingLeft="@dimen/view_dimen_small"
                        android:paddingRight="@dimen/view_dimen_small"
                        android:text="OBSERVATIONS"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/view_dimen_large"
                        android:text="tap for details"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_X_small"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_observation_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/linearLayout_observation"
                android:layout_marginLeft="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:layout_toRightOf="@id/separator_vertical_observation_1"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="@dimen/view_dimen_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/view_dimen_large"
                    android:paddingRight="@dimen/view_dimen_large"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="POST"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <!-- MapView must be wrapped inside a Layout to display Maps.-->
            <LinearLayout
                android:id="@+id/linearLayout_mapViewHolder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_large"
                android:layout_below="@id/btn_observation_post"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView_activityDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="true"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/linearLayout_mapViewHolder"
                android:layout_marginTop="@dimen/dimen_default"
                android:background="@color/colorWhite"
                android:padding="@dimen/view_dimen_small"
                android:text="Your observations"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_medium"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
