<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_X1_large"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imageView_dashboardHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/view_dimen_large">

                <TextView
                    android:id="@+id/textViewStatic_dash_stepsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/widget_dimen"
                    android:layout_marginTop="@dimen/padding_dimen_X_large"
                    android:text="@string/dash_stepInfo"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewStatic_dash_step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/textViewStatic_dash_stepsInfo"
                    android:layout_marginStart="@dimen/widget_dimen"
                    android:layout_marginTop="@dimen/view_dimen_medium"
                    android:text="@string/dash_step1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewStatic_dash_step2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/textViewStatic_dash_step1"
                    android:layout_marginStart="@dimen/widget_dimen"
                    android:layout_marginTop="@dimen/view_dimen_medium"
                    android:text="@string/dash_step2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewStatic_dash_step3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/textViewStatic_dash_step2"
                    android:layout_marginStart="@dimen/widget_dimen"
                    android:layout_marginTop="@dimen/view_dimen_medium"
                    android:text="@string/dash_step3"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_dashboard_scrollable"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightText"
            android:paddingBottom="@dimen/view_dimen_large"
            android:paddingLeft="@dimen/view_dimen_large"
            android:paddingRight="@dimen/view_dimen_large"
            android:paddingTop="@dimen/view_dimen_X1_large"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/linearLayout_activity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardview_default"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/view_dimen_small"
                android:layout_toStartOf="@id/separator_vertical_observation_1"
                android:background="@drawable/dashboard_card_border"
                android:elevation="@dimen/view_dimen_small">

                <!-- Total Activities made by user-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_activityCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/dash_activityCount"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_X3_large"/>

                    <TextView
                        android:id="@+id/textViewStatic_activityCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/view_dimen_large"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/view_dimen_small"
                        android:paddingRight="@dimen/view_dimen_small"
                        android:text="@string/dash_myActivities"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_small"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/view_dimen_large"
                        android:text="@string/dash_tapForDetails"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_X_small"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_activity_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/linearLayout_activity"
                android:layout_marginEnd="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:layout_toStartOf="@id/separator_vertical_observation_1"
                android:elevation="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="@dimen/view_dimen_small"
                    android:paddingLeft="@dimen/view_dimen_large"
                    android:paddingRight="@dimen/view_dimen_large"
                    android:paddingTop="@dimen/view_dimen_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="@string/dash_startActivity"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!--Line separator-->
            <View
                android:id="@+id/separator_vertical_observation_1"
                android:layout_width="@dimen/separator_dimen"
                android:layout_height="@dimen/cardview_large"
                android:layout_centerInParent="true"
                android:textAlignment="center"/>

            <LinearLayout
                android:id="@+id/linearLayout_observation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/cardview_default"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:layout_toEndOf="@id/separator_vertical_observation_1"
                android:background="@drawable/dashboard_card_border"
                android:elevation="@dimen/view_dimen_small">

                <!-- Total Observations made by user-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_observation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_observationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/dash_obsCount"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_X3_large"/>

                    <TextView
                        android:id="@+id/textViewStatic_observationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginTop="@dimen/view_dimen_large"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/view_dimen_small"
                        android:paddingRight="@dimen/view_dimen_small"
                        android:text="@string/dash_myObservations"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/view_dimen_large"
                        android:text="@string/dash_tapForDetails"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_X_small"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_observation_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/linearLayout_observation"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:layout_toEndOf="@id/separator_vertical_observation_1"
                android:elevation="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="@dimen/view_dimen_small"
                    android:paddingLeft="@dimen/view_dimen_large"
                    android:paddingRight="@dimen/view_dimen_large"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="@string/dash_postObservation"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <!-- MapView must be wrapped inside a Layout to display Maps.-->
            <LinearLayout
                android:id="@+id/linearLayout_mapViewHolder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_large"
                android:layout_below="@id/btn_observation_post"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView_activityDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="true"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/linearLayout_mapViewHolder"
                android:layout_marginTop="@dimen/dimen_default"
                android:background="@color/colorWhite"
                android:padding="@dimen/view_dimen_small"
                android:text="Your observations"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_medium"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
