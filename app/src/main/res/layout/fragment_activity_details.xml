<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightText"
                tools:context=".fragments.ActivityDetail">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout_activityDetailsHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/imageView_actDet_staticMap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_large"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/placeholder_maps"/>

                <ImageView
                    android:id="@+id/icon_actDet_openMap"
                    android:layout_width="@dimen/view_dimen_X2_large"
                    android:layout_height="@dimen/view_dimen_X2_large"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/imageView_actDet_staticMap"
                    android:layout_marginEnd="@dimen/view_dimen_small"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:background="@color/lightText"
                    android:src="@mipmap/ic_map_black_24dp"/>

                <TextView
                    android:id="@+id/textView_actDet_observationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView_actDet_staticMap"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/view_dimen_large"
                    android:layout_marginEnd="@dimen/view_dimen_small"
                    android:layout_marginStart="@dimen/view_dimen_large"
                    android:background="@color/secondaryText"
                    android:paddingLeft="@dimen/view_dimen_X_small"
                    android:paddingRight="@dimen/view_dimen_X_small"
                    android:text="4 obs."
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_large"/>


                <TextView
                    android:id="@+id/textView_actDet_activityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView_actDet_staticMap"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/view_dimen_large"
                    android:text="Hiking @ Golden Gate Park"
                    android:textAlignment="center"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/font_X_large"/>

                <TextView
                    android:id="@+id/textView_actDet_totalPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_actDet_activityName"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:text="5 people"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/font_small"/>

                <TextView
                    android:id="@+id/textView_actDet_totalPets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_actDet_totalPeople"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/view_dimen_large"
                    android:layout_marginTop="@dimen/view_dimen_small"
                    android:text="0 pets"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/font_small"/>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_actDet_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_activityDetailsHeading"
                android:layout_marginBottom="@dimen/view_dimen_large"
                android:layout_marginLeft="@dimen/view_dimen_large"
                android:layout_marginRight="@dimen/view_dimen_large"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:background="@color/colorWhite"
                android:padding="@dimen/view_dimen_large"
                card_view:cardPreventCornerOverlap="false">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeLayout_activityDetailsDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/textViewStatic_activityDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_dimen_medium"
                            android:gravity="top|start"
                            android:paddingEnd="@dimen/view_dimen_large"
                            android:paddingStart="@dimen/view_dimen_large"
                            android:paddingTop="@dimen/view_dimen_small"
                            android:text="@string/activityDetails"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_medium"/>

                        <View
                            android:id="@+id/separator_observation_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/separator_dimen"
                            android:layout_below="@id/textViewStatic_activityDetail"
                            android:layout_marginLeft="@dimen/view_dimen_large"
                            android:layout_marginRight="@dimen/view_dimen_large"
                            android:layout_marginTop="@dimen/view_dimen_small"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/separator_observation_2"
                            android:layout_marginTop="@dimen/view_dimen_large"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_actDet_totalLocations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="12 Locations"
                                android:textAlignment="center"
                                android:textColor="@color/secondaryText"
                                android:textSize="@dimen/font_small"/>

                            <View
                                android:id="@id/separator_observation_2"
                                android:layout_width="@dimen/separator_dimen_medium"
                                android:layout_height="match_parent"
                                android:background="@color/divider"/>

                            <TextView
                                android:id="@+id/textView_actDet_totalDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="5 miles"
                                android:textAlignment="center"
                                android:textColor="@color/secondaryText"
                                android:textSize="@dimen/font_small"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/view_dimen_small"
                        android:layout_marginTop="@dimen/view_dimen_X_large"
                        android:background="@drawable/dashboard_card_border"
                        android:gravity="center">

                        <Button
                            android:id="@+id/button_actDet_viewAllObservation"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/widget_dimen"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/view_dimen_X1_small"
                            android:background="@color/colorWhite"
                            android:paddingLeft="@dimen/view_dimen_large"
                            android:paddingRight="@dimen/view_dimen_large"
                            android:text="@string/actDet_viewAllObservations"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_small"/>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
