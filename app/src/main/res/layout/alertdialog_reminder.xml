<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_dimen_large">

    <Button
        android:id="@+id/button_alert_dialog_thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/view_dimen_X1_large"
        android:layout_marginTop="@dimen/view_dimen_X1_large"
        android:background="@color/colorPrimary"
        android:text="@string/alertDialog_reminder_30_mins"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_medium"
        />


    <!--<Button-->
    <!--android:id="@+id/button_alertDialog_60"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginRight="@dimen/view_dimen_X1_large"-->
    <!--android:layout_marginTop="@dimen/view_dimen_X1_large"-->
    <!--android:layout_weight="1.0"-->
    <!--android:background="@color/colorPrimary"-->
    <!--android:text="60 mins"-->
    <!--android:textColor="@color/colorWhite"-->
    <!--android:textSize="@dimen/font_medium"-->
    <!--/>-->


    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/button_alert_dialog_thirty"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:background="@color/divider"
        />

    <TextView
        android:id="@+id/textview_static_alert_dialog_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:gravity="center"
        android:text="@string/alertDialog_inputManual"
        android:textColor="@color/secondaryText"/>

    <EditText
        android:id="@+id/edittext_alert_dialog_manual_input"
        android:layout_width="@dimen/widget_dimen_X1_large"
        android:layout_height="@dimen/widget_dimen"
        android:layout_below="@id/textview_static_alert_dialog_input"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:hint="@string/alertDialog_inputManual_hint"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/colorSecondary"/>

</RelativeLayout>
