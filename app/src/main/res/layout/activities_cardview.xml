<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholder_tick" />


            <TextView
                android:id="@+id/activityname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:gravity="top|start"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="Hiking @ Golden Gate Public Park"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_photo"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.4"
                    android:background="@color/colorActionDark"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="6 Miles"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/person_age"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_toRightOf="@+id/person_name"
                    android:layout_weight="0.6"
                    android:background="@color/colorActionDark"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="5 Observations"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/person_distance"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/person_photo"
                    android:layout_toRightOf="@+id/person_age"
                    android:layout_weight="0.4"
                    android:background="@color/colorActionDark"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="8 people"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>