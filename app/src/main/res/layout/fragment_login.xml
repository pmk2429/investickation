<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorWhite"
             tools:context="investickations.com.sfsu.investickation.fragments.Login">

    <ImageView
        android:id="@+id/imageView_login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_default"/>


    <TextView
        android:id="@+id/txtView_login_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_dimen"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/padding_X3_large"
        android:text="Welcome to InvesTICKations"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_X_large"/>

    <TextView
        android:id="@+id/txtView_login_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_gravity="top|center"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_X4_large"
        android:gravity="center"
        android:text="Record Activities and post observations for Ticks"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/font_large"/>


    <!--<com.facebook.login.widget.LoginButton-->
