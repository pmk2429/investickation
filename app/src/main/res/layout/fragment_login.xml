    <!-- Register Button -->
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignBottom="@id/imageView_login_background"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_X4_large"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dimen_default"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold"/>

    !-- Register Button -->

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignBottom="@id/imageView_login_background"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_X_large"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold"/>

</FrameLayout>
