<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_pager_info"
        android:layout_width="@dimen/widget_dimen"
        android:layout_height="@dimen/widget_dimen"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_directions_walk_white_36dp"/>

    <TextView
        android:id="@+id/textView_pager_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_pager_info"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:text="Record Activities"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_medium"/>

</RelativeLayout>