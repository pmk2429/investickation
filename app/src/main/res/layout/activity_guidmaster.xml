<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Main content view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- container for all the fragments that belong to GuideMaster Activity-->
        <FrameLayout
            android:id="@+id/guide_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>
    </RelativeLayout>

    <!--&lt;!&ndash; Navigation Drawer: Drawer section use to inflate the List in the  &ndash;&gt;-->
    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/drawer_recyclerView"-->
    <!--android:layout_width="304dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="start"-->
    <!--android:background="@color/colorWhite"-->
    <!--android:scrollbars="vertical"/>-->

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_view_main"/>


</android.support.v4.widget.DrawerLayout>
