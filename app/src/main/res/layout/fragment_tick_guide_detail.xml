    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightText"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/view_dimen_X_large">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_tickGuide_detail_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_dimen_small"
                android:layout_marginEnd="@dimen/view_dimen_small"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:padding="@dimen/view_dimen_large"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/view_dimen_large">

                    <TextView
                        android:id="@+id/textView_tickDet_tickName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/widget_dimen"
                        android:gravity="top|start"
                        android:paddingEnd="@dimen/view_dimen_large"
                        android:paddingStart="@dimen/view_dimen_large"
                        android:paddingTop="@dimen/view_dimen_large"
                        android:text="American Dog Tick"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_X1_large"/>


                    <TextView
                        android:id="@+id/textView_tickDet_tickDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_tickDet_tickName"
                        android:gravity="top|start"
                        android:paddingEnd="@dimen/view_dimen_large"
                        android:paddingStart="@dimen/view_dimen_large"
                        android:paddingTop="@dimen/view_dimen_small"
                        android:text="It is a species of tick that is known to carry bacteria responsible for several diseases in humans"
                        android:textAlignment="center"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/font_X_small"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_tickGuide_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_dimen_large"
                android:layout_marginEnd="@dimen/view_dimen_small"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_large"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/view_dimen_large">

                    <TextView
                        android:id="@+id/textViewStatic_tickInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:gravity="center"
                        android:paddingBottom="@dimen/view_dimen_small"
                        android:paddingTop="@dimen/view_dimen_small"
                        android:text="@string/basicInfo"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_large"/>

                    <View
                        android:id="@+id/separator_tickDetail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/textViewStatic_tickInfo"
                        android:layout_marginLeft="@dimen/view_dimen_large"
                        android:layout_marginRight="@dimen/view_dimen_large"
                        android:layout_marginTop="@dimen/view_dimen_medium"
                        android:background="@color/divider"/>

                    <!-- Species-->
                    <TextView
                        android:id="@+id/textViewStatic_tickSpecies"
                        android:layout_width="@dimen/widget_dimen_X3_large"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/separator_tickDetail"
                        android:layout_marginStart="@dimen/view_dimen_large"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:gravity="start"
                        android:text="@string/tick_species"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/textView_tickDet_tickSpecies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/textViewStatic_tickSpecies"
                        android:layout_below="@id/separator_tickDetail"
                        android:layout_marginEnd="@dimen/view_dimen_large"
                        android:layout_marginStart="@dimen/view_dimen_small"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:layout_toEndOf="@id/textViewStatic_tickSpecies"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Lone Star Tick"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_small"/>


                    <!-- Formal Name -->
                    <TextView
                        android:id="@+id/textViewStatic_tickFormalName"
                        android:layout_width="@dimen/widget_dimen_X3_large"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_tickDet_tickSpecies"
                        android:layout_marginStart="@dimen/view_dimen_large"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:gravity="start"
                        android:text="@string/tick_scientific_name"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/textView_tickDet_tickFormalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_tickDet_tickSpecies"
                        android:layout_marginEnd="@dimen/view_dimen_large"
                        android:layout_marginStart="@dimen/view_dimen_small"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:layout_toEndOf="@id/textViewStatic_tickFormalName"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Amblyomma americanum"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_small"/>

                    <!-- Known For -->
                    <TextView
                        android:id="@+id/textViewStatic_tickDet_knownFor"
                        android:layout_width="@dimen/widget_dimen_X3_large"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewStatic_tickFormalName"
                        android:layout_marginStart="@dimen/view_dimen_large"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:gravity="start"
                        android:text="@string/tick_knownFor"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/textView_tickDet_knownFor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewStatic_tickFormalName"
                        android:layout_marginEnd="@dimen/view_dimen_large"
                        android:layout_marginStart="@dimen/view_dimen_small"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:layout_toEndOf="@id/textViewStatic_tickDet_knownFor"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Tularemia"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_small"/>


                    <!-- Location Name -->
                    <TextView
                        android:id="@+id/textViewStatic_tickDet_Location"
                        android:layout_width="@dimen/widget_dimen_X3_large"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewStatic_tickDet_knownFor"
                        android:layout_marginStart="@dimen/view_dimen_large"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:gravity="start"
                        android:text="@string/tick_location_habitat"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/textView_tickDet_tickLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_tickDet_knownFor"
                        android:layout_marginEnd="@dimen/view_dimen_large"
                        android:layout_marginStart="@dimen/view_dimen_small"
                        android:layout_marginTop="@dimen/view_dimen_small"
                        android:layout_toEndOf="@id/textViewStatic_tickDet_Location"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Dry Areas"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/font_small"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

