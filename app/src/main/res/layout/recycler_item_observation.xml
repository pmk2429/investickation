<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/padding_small"
              android:paddingRight="@dimen/padding_small"
              android:paddingTop="@dimen/padding_large">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_observation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image_tick_small"
                android:layout_width="@dimen/padding_dimen_X_large"
                android:layout_height="@dimen/padding_dimen_X_large"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/padding_large"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/textView_observationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_tick_small"
                android:text="American Dog Tick"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/font_large"/>

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_observationName"
                android:layout_toRightOf="@+id/image_tick_small"
                android:text="Presidio of San Francisco"
                android:textColor="@color/secondaryText"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="1 Hr"
                android:textColor="@color/secondaryText"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/image_status"
                android:layout_width="@dimen/padding_X_large"
                android:layout_height="@dimen/padding_X_large"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textView_timestamp"
                android:src="@mipmap/ic_cloud_success"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>