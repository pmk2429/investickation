<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                tools:context=".PersonalInfoActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--  user image -->
            <!--<ImageView-->
            <!--android:id="@+id/image_usermain"-->
            <!--android:layout_width="@dimen/widget_dimen_X2_large"-->
            <!--android:layout_height="@dimen/widget_dimen_X2_large"-->
            <!--android:layout_below="@id/toolbar_base"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginLeft="@dimen/padding_large"-->
            <!--android:layout_marginTop="@dimen/padding_large"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:background="@color/lightText"-->
            <!--android:padding="@dimen/padding_X_large"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@mipmap/ic_local_see_black_36dp"/>-->

            <!--  user image -->
            <ImageView
                android:id="@+id/image_usermain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_cardview_default"
                android:layout_below="@id/toolbar_base"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholder_user"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_selectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_usermain"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-36dp"
                android:layout_marginRight="@dimen/padding_small"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimaryDark"
                fab:fab_icon="@drawable/ic_photo_camera_white_36dp"/>


            <!--  User row -->
            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_usermain"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_large"
                android:padding="@dimen/padding_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_person_black_36dp"/>

            <EditText
                android:id="@+id/editText_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/image_usermain"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/icon_user"
                android:hint="Username"
                android:paddingBottom="16sp"
                android:paddingTop="16dp"
                android:textSize="@dimen/font_small"/>

            <!--  Email row -->
            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/icon_user"
                android:layout_marginLeft="@dimen/padding_small"
                android:padding="@dimen/padding_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_email_black_36dp"/>

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editText_user"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_toRightOf="@id/icon_email"
                android:hint="Email"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_large"
                android:textSize="@dimen/font_small"/>

            <!--  Password row -->
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/icon_email"
                android:layout_marginLeft="@dimen/padding_small"
                android:padding="@dimen/padding_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_vpn_key_black_36dp"/>

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editText_email"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_toRightOf="@id/icon_password"
                android:hint="Password"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="16sp"
                android:password="true"
                android:textSize="@dimen/font_small"/>

            <!--  Phone row -->
            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/icon_password"
                android:layout_marginLeft="@dimen/padding_small"
                android:padding="@dimen/padding_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_phone_black_36dp"/>

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_password"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_toRightOf="@id/icon_phone"
                android:hint="Phone"
                android:textSize="@dimen/font_small"/>

            <!--  User row -->
            <ImageView
                android:id="@+id/icon_address"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/icon_phone"
                android:layout_marginLeft="@dimen/padding_small"
                android:padding="@dimen/padding_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_location_on_black_36dp"/>

            <EditText
                android:id="@+id/editText_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_phone"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_toRightOf="@id/icon_address"
                android:hint="Address"
                android:textSize="@dimen/font_small"/>

        </RelativeLayout>
    </ScrollView>
    <!-- Save Button -->
    <Button
        android:id="@+id/button_Register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_large"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>
