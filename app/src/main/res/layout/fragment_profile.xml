<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".PersonalInfoActivity">


    <!--  user image -->
    <ImageView
        android:id="@+id/image_usermain"
        android:layout_width="@dimen/widget_dimen_X2_large"
        android:layout_height="@dimen/widget_dimen_X2_large"
        android:layout_below="@id/toolbar"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_large"
        android:adjustViewBounds="true"
        android:background="@color/lightText"
        android:padding="@dimen/padding_X_large"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_local_see_black_36dp"/>


    <!--  User row -->
    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="@dimen/widget_dimen"
        android:layout_height="@dimen/widget_dimen"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_toEndOf="@id/image_usermain"
        android:layout_toRightOf="@id/image_usermain"
        android:padding="@dimen/padding_small"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_person_black_36dp"/>

    <EditText
        android:id="@+id/editText_user"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/icon_user"
        android:hint="Username"
        android:paddingBottom="16sp"
        android:paddingTop="16dp"
        android:textSize="@dimen/font_small"/>

    <!--  Email row -->
    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/icon_user"
        android:layout_toEndOf="@id/image_usermain"
        android:layout_toRightOf="@id/image_usermain"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_local_post_office_black_36dp"/>

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editText_user"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_toRightOf="@id/icon_email"
        android:hint="Email"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:textSize="@dimen/font_small"/>

    <!--  Password row -->
    <ImageView
        android:id="@+id/icon_password"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/icon_email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_vpn_key_black_36dp"/>

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editText_email"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/icon_password"
        android:hint="Password"
        android:paddingBottom="16dp"
        android:paddingTop="16sp"
        android:password="true"
        android:textSize="16dp"/>

    <!--  Phone row -->
    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/icon_password"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_phone_black_36dp"/>

    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editText_password"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/icon_phone"
        android:hint="Phone"
        android:textSize="16sp"/>

    <!--  User row -->
    <ImageView
        android:id="@+id/icon_address"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/icon_phone"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_place_black_36dp"/>

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editText_phone"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/icon_address"
        android:hint="Address"
        android:textSize="16sp"/>


    <!-- Save Button -->
    <Button
        android:id="@+id/button_Register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>
