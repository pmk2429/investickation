<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/colorWhite"
                                                 android:orientation="vertical"
                                                 tools:context=".PersonalInfoActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--  user image -->
            <ImageView
                android:id="@+id/imageView_profile_userImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_X_large"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/header"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholder_user"/>

            <!--  User row -->
            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentStart="true"
                android:layout_below="@id/imageView_profile_userImage"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:layout_marginTop="@dimen/view_dimen_large"
                android:padding="@dimen/view_dimen_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_person_black_24dp"/>

            <EditText
                android:id="@+id/editText_profile_fullName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/imageView_profile_userImage"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/icon_user"
                android:ellipsize="end"
                android:hint="@string/profile_name"
                android:lines="1"
                android:paddingBottom="@dimen/view_dimen_large"
                android:paddingTop="@dimen/view_dimen_large"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/font_small"/>

            <!--  Email row -->
            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentStart="true"
                android:layout_below="@id/icon_user"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_email_black_36dp"/>

            <EditText
                android:id="@+id/editText_profile_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_profile_fullName"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_toEndOf="@id/icon_email"
                android:ellipsize="end"
                android:hint="@string/profile_email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingBottom="@dimen/view_dimen_large"
                android:paddingTop="@dimen/view_dimen_large"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/font_small"/>

            <!--  Password row -->
            <ImageView
                android:id="@+id/icon_password"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentStart="true"
                android:layout_below="@id/icon_email"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_cloud_done_black_36dp"/>

            <EditText
                android:id="@+id/editText_profile_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_profile_email"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_toEndOf="@id/icon_password"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingBottom="@dimen/view_dimen_large"
                android:paddingTop="@dimen/view_dimen_large"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/font_small"/>

            <!--  User row -->
            <ImageView
                android:id="@+id/icon_address"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentStart="true"
                android:layout_below="@id/icon_password"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_location_on_black_36dp"/>

            <EditText
                android:id="@+id/editText_profile_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_profile_password"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_toEndOf="@id/icon_address"
                android:ellipsize="end"
                android:hint="@string/profile_address"
                android:lines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/font_small"/>

            <!--  Phone row -->
            <ImageView
                android:id="@+id/icon_city"
                android:layout_width="@dimen/widget_dimen"
                android:layout_height="@dimen/widget_dimen"
                android:layout_alignParentStart="true"
                android:layout_below="@id/icon_address"
                android:layout_marginStart="@dimen/view_dimen_small"
                android:padding="@dimen/view_dimen_medium"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_phone_black_36dp"/>

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_dimen"
                android:layout_below="@id/editText_profile_address"
                android:layout_marginEnd="@dimen/view_dimen_large"
                android:layout_toEndOf="@id/icon_city"
                android:ellipsize="end"
                android:hint="@string/profile_address"
                android:inputType="phone"
                android:lines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="@dimen/font_small"/>


        </RelativeLayout>

    </ScrollView>


    <!-- Save Button -->
    <Button
        android:id="@+id/button_Register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/view_dimen_large"
        android:layout_marginLeft="@dimen/view_dimen_large"
        android:layout_marginRight="@dimen/view_dimen_large"
        android:background="@color/colorPrimary"
        android:text="@string/profile_save"
        android:textColor="@color/colorWhite"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_userProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:src="@mipmap/ic_photo_camera_white_36dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@+id/imageView_profile_userImage"
        app:layout_anchorGravity="bottom|right|end"/>


</android.support.design.widget.CoordinatorLayout>