<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                tools:context=".ObservationMainActivity">


    <!--  tick image -->
    <ImageView
        android:id="@+id/image_tick"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/toolbar_base"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/placeholder_tick"/>

    <!--&lt;!&ndash; Circle button &ndash;&gt;-->
    <!--<ImageButton-->
    <!--android:id="@+id/imageButton"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:layout_alignBottom="@id/image_tick"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_gravity="bottom"-->
    <!--android:layout_marginBottom="-32dp"-->
    <!--android:layout_marginRight="20dp"-->
    <!--android:background="@drawable/circle"/>-->

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_tick"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-40dp"
        android:layout_marginRight="@dimen/padding_small"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_icon="@drawable/ic_photo_camera_white_36dp"/>


    <!--  Tick row -->
    <ImageView
        android:id="@+id/icon_tick"
        android:layout_width="@dimen/widget_dimen"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_tick"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_large"
        android:padding="@dimen/padding_medium"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_bug_report_black_36dp"/>

    <EditText
        android:id="@+id/editText_tick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_below="@id/image_tick"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_toRightOf="@id/icon_tick"
        android:hint="@string/text_tickName"
        android:paddingBottom="16sp"
        android:paddingTop="@dimen/padding_large"
        android:textSize="16dp"/>

    <!--  Species row -->
    <ImageView
        android:id="@+id/icon_species"
        android:layout_width="@dimen/widget_dimen"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/icon_tick"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_large"
        android:padding="@dimen/padding_medium"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <EditText
        android:id="@+id/editText_species"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_below="@id/editText_tick"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_toRightOf="@id/icon_species"
        android:hint="@string/text_speciesName"
        android:paddingBottom="16sp"
        android:paddingTop="@dimen/padding_large"
        android:textSize="16dp"/>


    <!--  Species row -->
    <ImageView
        android:id="@+id/icon_numberOfTicks"
        android:layout_width="@dimen/widget_dimen"
        android:layout_height="@dimen/widget_dimen"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/icon_species"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_large"
        android:padding="@dimen/padding_medium"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_paw"/>

    <EditText
        android:id="@+id/editText_numOfTicks"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dimen"
        android:layout_below="@id/editText_species"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_toRightOf="@id/icon_numberOfTicks"
        android:hint="Species"
        android:paddingBottom="16sp"
        android:paddingTop="@dimen/padding_large"
        android:textSize="16dp"/>


    <!-- Add Observation Button -->
    <Button
        android:id="@+id/button_addObservation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:text="Post Observation"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_small"/>


</RelativeLayout>
