<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="investickations.com.sfsu.investickation">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonalInfoActivity"
            android:label="@string/title_activity_personal_info"></activity>
        <activity
            android:name=".GuideMasterActivity"
            android:label="@string/title_activity_guide_master"></activity>
        <activity
            android:name=".UserActivityMainActivity"
            android:label="@string/title_activity_user_activity_main"></activity>
        <activity
            android:name=".UserActivityDetailActivity"
            android:label="@string/title_activity_activity_detail"></activity>
        <activity
            android:name=".ObservationsActivity"
            android:label="@string/title_activity_observations"></activity>
        <activity
            android:name=".ObservationMainActivity"
            android:label="@string/title_activity_observation_main"></activity>
        <activity
            android:name=".ObservationDetailActivity"
            android:label="@string/title_activity_observation_detail"></activity>
    </application>

</manifest>
