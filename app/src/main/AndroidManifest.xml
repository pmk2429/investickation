<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="investickations.com.sfsu.investickation" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_personal_info" />
        <activity
            android:name=".GuideMasterActivity"
            android:label="@string/title_activity_guide_master" />
        <activity
            android:name=".UserActMainActivity"
            android:label="@string/title_activity_user_activity_main" />
        <activity
            android:name=".UserActDetailActivity"
            android:label="@string/title_activity_activity_detail" />
        <activity
            android:name=".ObservationsActivity"
            android:label="@string/title_activity_observations" />
        <activity
            android:name=".ObservationMainActivity"
            android:label="@string/title_activity_observation_main" />
        <activity
            android:name=".ObservationDetailActivity"
            android:label="@string/title_activity_observation_detail" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>
